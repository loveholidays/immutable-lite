{
  "name": "@loveholidays/immutable-lite",
  "version": "0.0.7",
  "description": "A shim of ImmutableJS, keeping only functionality required for Love Holidays.",
  "browser": "dist/immutable-lite.web.js",
  "main": "node_modules/immutable/dist/immutable.js",
  "repository": "https://github.com/loveholidays/immutable-lite",
  "author": "Love Holidays",
  "license": "MIT",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,json"
    }
  },
  "scripts": {
    "build": "webpack -p --mode=production --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "prepublish": "webpack -p --mode=production --config webpack.config.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "immutable": "^3.7.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-json-import": "^0.3.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  }
}
